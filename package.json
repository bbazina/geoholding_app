{
  "name": "geoholding_app",
  "version": "1.0.0",
  "description": "web application",
  "main": "index.js",
  "repository": "git@github.com:jglasovic/geoholding_app.git",
  "author": "Jure Glasovic <jglasovic@gmail.com>",
  "license": "MIT",
  "private": true,
  "url": "https://geoholding.herokuapp.com/",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "yarn build && node dist/index.js",
    "start:dev": "tsc-watch --onSuccess nodemon",
    "build": "rm -rf dist/* && yarn tsc",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "lint -- --fix",
    "test": "echo Hello World!",
    "db:create": "ts-node scripts/create-database",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migrations:revert",
    "migration:create": "yarn typeorm migration:create -n"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^13.11.1",
    "@types/pg": "^7.14.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.8.2",
    "typeorm": "^0.2.24"
  }
}
